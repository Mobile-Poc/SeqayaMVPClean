<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="370dp">

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="160dp"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="300dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:text="Track order"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:hint="Order Date"
            android:textSize="16sp" />
        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:hint="Shipment No."
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="309487657654"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="31 ,jun ,2018"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shipped_image"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_checked" />

        <ViewAnimator
            android:id="@+id/second_peace"
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/green"/>

        <ImageView
            android:id="@+id/inprossisng_image"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_checked" />

        <ViewAnimator
            android:id="@+id/first_peace"
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/green"/>



        <ImageView
            android:id="@+id/deliverd_image"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_checked" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="15dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="15dp"
            android:text="inProccessing"
            android:textSize="13sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:text="shipped"
            android:textSize="13sp" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="15dp"
            android:text="Deliverd"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_delivery_truck" />

        <TextView
            android:id="@+id/expected_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            tools:text="expected delivery in sunday 24,8,2019" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="78dp"
            android:background="@drawable/water_6" />

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prod_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="name"/>

                <TextView
                    android:id="@+id/prod_price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buttle_size"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/bpp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="235dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="34dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Status"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="270dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="29dp"></LinearLayout>

        <TextView
            android:id="@+id/checked_state"
            android:layout_width="77dp"
            android:layout_height="34dp"
            android:text="Deliverd"
            android:textColor="@color/green"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/order_details_text"
            android:layout_width="280dp"
            android:layout_height="68dp"
            android:gravity="center"
            android:text="Order details"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_right_arrow" />

    </LinearLayout>

</android.support.v7.widget.CardView>