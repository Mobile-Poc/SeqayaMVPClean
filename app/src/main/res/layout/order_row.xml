<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardStyle">


    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="مياه نقية"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/product_image"
        app:layout_constraintTop_toTopOf="@+id/product_image" />

    <TextView
        android:id="@+id/product_manufacturer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="نستلة"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@+id/product_name" />

    <TextView
        android:id="@+id/bottle_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1.0"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/product_manufacturer"
        app:layout_constraintTop_toBottomOf="@+id/product_manufacturer" />

    <TextView
        android:id="@+id/no_in_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="25"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/bottle_size"
        app:layout_constraintTop_toBottomOf="@+id/bottle_size" />

    <TextView
        android:id="@+id/number_in_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/bottle_per_package"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/no_in_package"
        app:layout_constraintRight_toLeftOf="@+id/no_in_package"
        app:layout_constraintTop_toTopOf="@+id/no_in_package" />

    <View
        android:id="@+id/language_change"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="@+id/no_in_package"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_in_package" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="150"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/product_manufacturer" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/rs"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/quantity"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/language_change"
        app:layout_constraintTop_toBottomOf="@+id/language_change" />

    <TextView
        android:id="@+id/number_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="5"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="120dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:src="@drawable/water_6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/litre"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/bottle_size"
        app:layout_constraintRight_toLeftOf="@+id/bottle_size"
        app:layout_constraintTop_toTopOf="@+id/bottle_size" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/box"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/number_of_item"
        app:layout_constraintRight_toLeftOf="@+id/number_of_item"
        app:layout_constraintTop_toTopOf="@+id/number_of_item" />


</android.support.constraint.ConstraintLayout>