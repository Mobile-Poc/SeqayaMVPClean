<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="GeneralTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItemTitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_four</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ListItemRepo" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="timeTitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/header_three</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="UserLocation" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="UserBio" parent="GeneralTextView">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>


    </style>


    <style name="CardStyle" parent="@android:style/Widget">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dateDialog" parent="Animation.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loadingIndicatorText" parent="GeneralTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SignPostBody" parent="GeneralTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SignPostHeader" parent="GeneralTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:typeface">serif</item>
    </style>


    <style name="timeDialog" parent="Animation.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>

    </style>
</resources>
